<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:orientation="vertical"
    tools:context="es.ehu.tta.appetc.presentacion.presentacion.PalabrasActivity">

    <TextView
        android:id="@+id/menu_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARNICERIA"
        android:onClick="carniceria"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PESACADERIA"
        android:onClick="pescaderia"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FRUTAS Y VERDURAS"
        android:onClick="verduleria"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TODOS LOS PRODUCTOS: DICCIONARIO"
        android:onClick="productos"/>


</LinearLayout>
